<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseButton" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">@drawable/base_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- styles.xml -->
    <style name="CustomDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">16sp</item>
        <!-- Other customizations you want -->
    </style>


    <style name="EditTextLogin">
        <item name="android:color">@color/white</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:background">@drawable/login_edit_text</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:padding">20dp</item>
    </style>

    <style name="LoginBtn">
        <item name="android:color">@color/white</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:background">@drawable/login_edit_text</item>
    </style>

</resources>