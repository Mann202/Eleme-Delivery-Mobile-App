<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
    </style>
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <!-- Tùy chỉnh các thuộc tính của Chip ở đây nếu cần -->
        <item name="chipBackgroundColor">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconTint">@color/primary</item>
        <item name="rippleColor">@color/primary</item>
        <item name="chipCornerRadius">16dp</item>
    </style>
    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="BaseButton" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">@drawable/base_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LogoutButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">@drawable/logout_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OrderButton">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxHeight">0dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CancelButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- styles.xml -->
    <style name="CustomDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">16sp</item>
        <!-- Other customizations you want -->
    </style>


    <style name="EditTextLogin">
        <item name="android:color">@color/white</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:background">@drawable/login_edit_text</item>
    </style>
    <style name="EditSearch">
        <item name="android:color">@color/white</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">-10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:background">@drawable/login_edit_text</item>
    </style>

    <style name="TextVerrification">
        <item name="android:color">@color/white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:background">@drawable/login_edit_text</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:padding">20dp</item>
    </style>

    <style name="LoginBtn">
        <item name="android:color">@color/white</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:background">@drawable/button_login_state</item>
    </style>

    <style name="MineCustomTabText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="NavDrawerTextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="headerText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:fontWeight">900</item>
    </style>

    <style name="newCategoryBtn">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/newcategorybtn</item>
        <item name="android:textColor">@color/lightdark</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:fontWeight">1000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:drawableStart">@drawable/ic_plus_icon</item>
        <item name="android:drawableTint">@color/darkbg</item>
    </style>

    <style name="categoryItem">
        <item name="android:background">@drawable/childcategoryitem</item>
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>

    <style name="categoryItemText">
        <item name="android:textColor">@color/darkbg</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:fontWeight">900</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="addMenuBtn">
        <item name="android:background">@drawable/button_add_menu</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:drawableStart">@drawable/ic_plus_icon</item>
        <item name="android:drawableTint">@color/secondary</item>
    </style>
    <style name="SaveButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">@drawable/save_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WhiteLogoutButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">@drawable/whitelogout_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AddButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:background">@drawable/add_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>