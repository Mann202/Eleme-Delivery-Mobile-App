<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_res"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/top_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/inside_top_panel"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/background_restaurant_item"
                        android:orientation="horizontal"
                        android:paddingStart="25dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingEnd="25dp">
                        <ImageView
                            android:id="@+id/nav_back"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle_background"
                            android:src="@drawable/baseline_arrow_back_ios_24"
                            android:paddingStart="10dp"
                            android:paddingEnd="5dp"
                            android:paddingVertical="5dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="15dp"
                            app:tint="@color/primary" />
                        <ImageView
                            android:id="@+id/favorite_button"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle_background"
                            android:src="@drawable/baseline_favorite_24"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingVertical="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="48dp"
                            app:tint="@color/primary" />
                        <ImageView
                            android:id="@+id/info_button"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle_background"
                            android:src="@drawable/baselin_exclamation_24dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingVertical="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="2dp"
                            app:tint="@color/primary" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/finddishname"
                            android:layout_width="match_parent"
                            android:layout_toRightOf="@+id/nav_back"
                            android:layout_centerHorizontal="true"
                            android:layout_height="50dp"
                            android:layout_marginEnd="95dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/finddishtextinput"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/customer_border"
                                android:drawableStart="@drawable/baseline_search_24"
                                android:drawableTint="#C2CECE"
                                android:paddingStart="5dp"
                                android:hint="Search dish name"
                                android:textColor="@color/black"
                                android:textColorHighlight="@color/primary"
                                android:textColorHint="@color/whiteedt"
                                android:textColorLink="@color/primary"
                                android:textSize="15sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/total_middle_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/middle_panel_dish"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/rounded_background_dish"
                        android:layout_marginTop="100dp">
                        <TextView
                            android:id="@+id/restaurant_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textFontWeight="700"
                            android:textColor="@color/black"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="18sp"
                            android:layout_marginTop="13dp"
                            android:layout_marginStart="40dp">
                        </TextView>
                        <TextView
                            android:id="@+id/restaurant_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textSize="15sp"
                            android:layout_below="@+id/restaurant_name"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="40dp">
                        </TextView>
                        <ImageView
                            android:id="@+id/location_dish"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/img_15"
                            android:layout_below="@+id/restaurant_type"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="40dp">
                        </ImageView>
                        <TextView
                            android:id="@+id/dish_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            android:layout_below="@+id/restaurant_type"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="70dp">
                        </TextView>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/dish_order_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order type"
                        android:textSize="18sp"
                        android:textColor="@color/gray"
                        android:layout_below="@+id/middle_panel_dish"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp">
                    </TextView>
                    <TextView
                        android:id="@+id/dish_order_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change"
                        android:textSize="18sp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/primary"
                        android:layout_below="@+id/middle_panel_dish"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp">
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>