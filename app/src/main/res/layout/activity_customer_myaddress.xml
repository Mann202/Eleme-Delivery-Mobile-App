<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/whiteedt">

    <LinearLayout
        android:id="@+id/backwardGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:padding="16dp">
    <ImageView
        android:id="@+id/backward"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/ProfileTitle"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:text="@string/msg_my_address"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/black"
        android:textFontWeight="900"
        android:textSize="35sp"
        android:layout_gravity="center_vertical"
        style="@style/headerText"/>
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddressList"
        android:layout_below="@id/backwardGroup"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/black"
        android:text="@string/msg_address"
        android:textSize="18sp"/>

    <RelativeLayout
        android:id="@+id/AddressItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddressList"
        android:layout_marginTop="@dimen/margin_small"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/baseline_person_24"/>

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView"
            android:layout_toStartOf="@+id/editIcon"
            android:layout_marginStart="@dimen/margin_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_bold"/>

            <TextView
                android:id="@+id/phoneNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_phone_number"
                android:textSize="14sp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/lightwhite"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_address"
                android:textSize="14sp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/lightwhite"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_small"
            android:src="@drawable/edit_button"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_add_new_address"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/primary"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        style="@style/AddButton"/>

</RelativeLayout>