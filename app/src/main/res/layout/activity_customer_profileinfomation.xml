<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteedt"
        android:gravity="start">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="45dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/ProfileTitle"
            style="@style/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/lato_bold"
            android:text="Profile"
            android:textColor="@color/lightdark"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/ProfilePicture"
            android:layout_below="@+id/ProfileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_avata"/>

        <TextView
            android:id="@+id/NameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProfilePicture"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_standard"
            android:text="Name"
            android:textColor="#828282"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/nameLayout"
            android:layout_below="@+id/NameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TextInputLayout for name field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameField"
                    style="@style/EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:drawableEnd="@drawable/edit_button"
                    android:drawablePadding="10dp"
                    android:drawableTint="#C2CECE"
                    android:fontFamily="@font/lato_regular"
                    android:paddingRight="@dimen/padding_small"
                    android:textColorHighlight="@color/primary"
                    android:textColorHint="@color/whiteedt"
                    android:textColorLink="@color/primary"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/PhoneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameLayout"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:text="Phone number"
            android:textColor="#828282"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/phoneLayout"
            android:layout_below="@id/PhoneTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TextInputLayout for phone field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ProfilePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneField"
                    style="@style/EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:drawableEnd="@drawable/edit_button"
                    android:drawablePadding="10dp"
                    android:drawableTint="#C2CECE"
                    android:fontFamily="@font/lato_regular"
                    android:inputType="none"
                    android:paddingRight="@dimen/padding_small"
                    android:textColorHighlight="@color/primary"
                    android:textColorHint="@color/whiteedt"
                    android:textColorLink="@color/primary"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/EmailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneLayout"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:text="Email"
            android:textColor="#828282"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/emailLayout"
            android:layout_below="@+id/EmailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TextInputLayout for email field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextLogin"
                    android:id="@+id/emailField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableEnd="@drawable/edit_button"
                    android:drawablePadding="10dp"
                    android:drawableTint="#C2CECE"
                    android:inputType="none"
                    android:paddingRight="@dimen/padding_small"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="20sp"
                    android:textColorHighlight="@color/primary"
                    android:textColorHint="@color/whiteedt"
                    android:textColorLink="@color/primary" />

            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/LanguageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailLayout"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:text="Language"
            android:textColor="#828282"
            android:fontFamily="@font/lato_regular"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/sn_language_customer"
            style="@style/SpinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LanguageTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="20dp"
            android:popupBackground="@drawable/spinner_background"
            android:popupTheme="@style/AppTheme.PopupOverlay" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changepassword_button"
            style="@style/WhiteLogoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/logout_button"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:text="Change password"
            android:textSize="21sp"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout_button"
            style="@style/WhiteLogoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/lato_bold"
            android:text="Logout"
            android:textSize="21sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/red" />
        
      <Button
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:layout_below="@+id/sn_language_customer"
          android:backgroundTint="@color/gray"
          android:background="@drawable/save_button"
          android:layout_marginTop="20dp"
          android:layout_centerHorizontal ="true"
          android:text="View all address"
          android:textColor="@color/white"
          android:textAllCaps="false"
          android:padding="10dp"
          android:id="@+id/view_all_address_button"
          />


    </RelativeLayout>
</ScrollView>