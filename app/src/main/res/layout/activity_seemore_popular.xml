<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:fitsSystemWindows="true">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent">
                <RelativeLayout android:id="@+id/top_panel_seemore" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:id="@+id/pannel_top_seemore" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/background_seemore" android:paddingBottom="20dp">
                        <androidx.appcompat.widget.AppCompatButton android:id="@+id/back_btn_seemore" android:layout_width="45dp" android:layout_height="45dp" android:layout_marginTop="20dp" android:layout_marginStart="10dp" android:layout_marginEnd="50dp" android:background="@android:color/transparent" android:drawableStart="@drawable/baseline_arrow_back_ios_24" android:gravity="center" android:padding="15dp"> </androidx.appcompat.widget.AppCompatButton>
                        <androidx.appcompat.widget.AppCompatButton android:id="@+id/search_btn_seemore" android:layout_width="45dp" android:layout_height="45dp" android:layout_marginStart="362dp" android:layout_marginTop="20dp" android:layout_marginEnd="10dp" android:background="@android:color/transparent" android:drawableStart="@drawable/baseline_search_24" android:gravity="center" android:paddingTop="2dp"> </androidx.appcompat.widget.AppCompatButton>
                        <TextView android:id="@+id/content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="95dp" android:layout_marginTop="28dp" android:fontFamily="@font/lato_regular" android:text="Popular in your area" android:textAlignment="center" android:textColor="@color/black" android:textFontWeight="900" android:textSize="25sp"> </TextView>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/mid_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@id/top_panel_seemore">
                    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcv_seemore" android:layout_width="match_parent" android:layout_marginStart="15dp" android:layout_height="wrap_content"> </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>