<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteedt"
    android:gravity="start">

    <ImageView
        android:id="@+id/backward"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        />
    <TextView
        android:id="@+id/customer_changename_title"
        android:layout_below="@id/backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:text="@string/msg_change_name"
        android:textStyle="bold"
        android:textFontWeight="900"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/black"
        android:fontFamily="@font/lato_bold"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NameTitle"
        android:layout_below="@id/customer_changename_title"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:text="@string/msg_name"
        android:fontFamily="@font/lato_regular"
        android:textSize="20sp"
        android:textColor="#828282"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/ProfileName"
        android:layout_height="wrap_content"
        android:layout_below="@id/NameTitle"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/EditTextLogin"
            android:id="@+id/editNameField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingRight="@dimen/padding_small"
            android:drawablePadding="10dp"
            android:drawableTint="#C2CECE"
            android:inputType="text"
            android:drawableEnd="@drawable/ic_cancel"
            android:textColorHighlight="@color/primary"
            android:textColorHint="@color/whiteedt"
            android:textColorLink="@color/primary" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="42dp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/msg_save"
        android:textColor="@color/white" />

</RelativeLayout>