<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:backgroundTint="@color/white50"
        android:id="@+id/item_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:id="@+id/product_image_container">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/product_image"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/product_image_container">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_bold"
                    android:textFontWeight="500"
                    android:text="Food name"
                    android:layout_marginTop="0dp"
                    android:textSize="20sp"
                    android:id="@+id/product_name"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_bold"
                    android:text="abcabc"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:id="@+id/product_info"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/lato_bold"
                    android:text="100.000 VNĐ"
                    android:layout_marginTop="2dp"
                    android:textSize="16sp"
                    android:id="@+id/product_price"/>

            </LinearLayout>

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:text="-"
                    style="@style/Widget.AppCompat.ActionButton"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_button_left"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/subtract"/>

                <Button
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:text="1"
                    style="@style/Widget.AppCompat.ActionButton"
                    android:textSize="12sp"
                    android:background="@drawable/normal_button"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/product_amount"/>

                <Button
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:text="+"
                    style="@style/Widget.AppCompat.ActionButton"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_button_right"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/add"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>