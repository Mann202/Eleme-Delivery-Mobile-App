<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:padding="5dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:backgroundTint="@color/white50"
        android:id="@+id/item_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:id="@+id/product_image_container">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/dishes_01"
                    android:id="@+id/product_image"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/food_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/product_image_container">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Shaking Beef Tri..."
                    android:layout_marginTop="0dp"
                    android:textSize="18sp"
                    android:id="@+id/product_name"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="Pepper Plus, Size M"
                    android:layout_marginTop="3dp"
                    android:textSize="12dp"
                    android:id="@+id/product_info"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/lato_bold"
                    android:text="100.000 VNÄ"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:id="@+id/product_price"/>

            </LinearLayout>

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp" />

            <RelativeLayout
                android:layout_width="67dp"
                android:layout_height="23dp"
                android:background="@drawable/cart_input_bg"
                android:layout_toEndOf="@+id/food_name"
                android:layout_centerVertical="true"
                android:paddingHorizontal="10dp">
                <TextView
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="-"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tv_foodquantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@+id/minus"
                    android:layout_toStartOf="@+id/add"
                    android:textAlignment="center"
                    android:text="0"
                    />

                <TextView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:text="+"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>