<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingVertical="10dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_recycler_restaurant"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="75dp"
        android:layout_marginStart="5dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:src="@drawable/starbucks_corporation_logo_2011"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/logo"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:id="@+id/layoutMainItem">
        <TextView
            android:textColor="@color/lightwhite"
            android:id="@+id/dateText"
            android:fontFamily="@font/lato_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31 Jun 2023"/>

        <TextView
            android:id="@+id/itemCountText"
            android:textColor="@color/lightwhite"
            android:fontFamily="@font/lato_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dateText"
            android:layout_marginStart="20dp"
            android:text="3 items"/>

        <TextView
            android:textColor="@color/lightdark"
            android:fontFamily="@font/lato_bold"
            android:id="@+id/nameText"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gia Man"/>

        <TextView
            android:id="@+id/adressText"
            android:layout_below="@id/nameText"
            android:textColor="@color/lightdark"
            android:fontFamily="@font/lato_bold"
            android:layout_marginTop="5dp"
            android:text="KTX khu A Đại học QG TP Hồ Chí Minh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/totalPriceText"
            android:layout_below="@id/adressText"
            android:textSize="20sp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/primary"
            android:layout_marginTop="5dp"
            android:text="40.000d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalPriceText"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/lato_bold"
            android:textAllCaps="false"
            android:paddingHorizontal="30dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Cancel" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/detailBtn"
            android:layout_below="@+id/totalPriceText"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="30dp"
            android:text="Detail"
            android:textAllCaps="false"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_toEndOf="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/navigateNextBtn"
        android:layout_toEndOf="@+id/layoutMainItem"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_navigate_next_24"/>
</RelativeLayout>