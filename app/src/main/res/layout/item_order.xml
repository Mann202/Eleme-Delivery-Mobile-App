<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:paddingVertical="10dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_bg_white">

    <TextView
        android:id="@+id/tv_order_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2x"
        android:fontFamily="@font/lato_bold"
        android:textSize="14dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shaking Beef Tri-Tip"
        android:fontFamily="@font/lato_bold"
        android:textSize="14dp"
        android:layout_marginHorizontal="20dp"
        android:layout_toEndOf="@+id/tv_order_quantity"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_order_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add aesculus"
        android:fontFamily="@font/lato_regular"
        android:textSize="14dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/tv_order_name"
        android:layout_toEndOf="@+id/tv_order_quantity"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/tv_order_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30.000 VNĐ"
        android:fontFamily="@font/lato_regular"
        android:textSize="14dp"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/gray" />

</RelativeLayout>