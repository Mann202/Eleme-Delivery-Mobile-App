<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/pannel_top_dr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back_btn_dr"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="50dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/baseline_arrow_back_ios_24"
                android:gravity="center"
                android:padding="11dp">
            </androidx.appcompat.widget.AppCompatButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drink"
                android:layout_marginTop="28dp"
                android:layout_marginStart="175dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textFontWeight="900"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"
                >
            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/middle_layout_dr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/pannel_top_dr">
            <TextView
                android:background="@drawable/spinner_style"
                android:id="@+id/spinner_tab_dr"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Sort by:"
                android:textAlignment="center"
                android:paddingTop="8dp"
                android:textFontWeight="900"
                android:textSize="18sp"
                android:textColor="@color/primary"
                android:fontFamily="@font/lato_regular"
                android:paddingStart="-17dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_filterlist_dr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <ScrollView
            android:id="@+id/scv_Drinkitems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/middle_layout_dr">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_drinklist"
                android:layout_below="@+id/middle_layout_dr">
            </androidx.recyclerview.widget.RecyclerView>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>